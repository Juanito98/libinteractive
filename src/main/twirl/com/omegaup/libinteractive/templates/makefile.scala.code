@import _root_.java.nio.file.Path
@import com.omegaup.libinteractive.target.MakefileRule
@(message: String, runPath: Path, allExecutables: String, allRules: Iterable[MakefileRule])
# @message

all: @allExecutables

@for(rule <- allRules) {
@rule.target: @rule.requisites.mkString(" ")
	@rule.compiler @rule.params

}
.PHONY: run
run: @allExecutables
	@@@runPath

.PHONY: test
test: @allExecutables
	@@@runPath < examples/sample.in
